	text-transform uppercase

$trns
	transition: all 0.5s cubic-bezier(0.165, 0.84, 0.44, 1) 0s
	
$h
	font-weight bold
	text-transform uppercase
	color black
	
$db
	display block

$rel
	position relative
	
$abs
	position absolute
	
$tac
