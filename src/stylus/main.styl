@import 'modules/base/colors'

body, header, section, h1, h2, h3, h4, h5, h6
	margin 0
	padding 0

body
	font-family 'SegoeUIRegular', sans-serif
	line-height 1.15
	font-size 20px
	color $grey
	
h1, h2, h3, h4, h5, h6
	font-family 'IntroRegular', sans-serif

h1
	font-size 64px

h2
	font-size 48px
	
h3
	font-size 30px
	
h4
	font-size 23px
	
p
	font-size 20px

section
	padding 50px 0
	
.segoe-font
	font-family 'SegoeUIRegular', sans-serif
	
.intro-font
	font-family 'IntroRegular', sans-serif

.text-right
	text-align right
	
.text-center
	text-align center
	
.green
	color $green

.pink
	color $pink

.yellow
	color $yellow

.blue 
	color $blue

.heading
	margin-bottom 50px

.hero
	padding 115px 0
	width 100%
	height 100vh
	
	&__subheader
		font-size 25px
		position relative
		top -7px

		&--big
			font-size 33px

.arrow-down
	color $navy-blue
	height 70px
	padding-left 90px
	background url('../img/arrow-down-bg.png') no-repeat
	background-position left center
	background-size 70px
	position relative
	
	&:before
		content ''
		background url('../img/arrow-down.png') no-repeat
		width 37px
		height 23px
		display block
		position absolute
		left 15px
		top 0
		bottom 0
		margin auto
		
.video-container
	&__ipad
		display block
		margin 0 auto
		width 85%


.numbers
	& .heading
		margin-bottom 15px

	&__bullet
		width 10px
		height 10px
		margin 0 auto 15px
		background $green
		border-radius 50%
		
	&__description
		font-size 16px
		
.image-container
	border-radius 50%
	border 3px dotted
	margin 20px auto
	position relative
	
	&__img
		width 120px
		height 120px
		border-radius 50%
		position absolute
		top 0
		bottom 0
		left 0
		right 0
		margin auto
		background-color $pink
		
		&--laptop
			background-image url('../img/sprites/sprite1.png')
			background-position 0px 0px
			background-repeat no-repeat
			
		&--phone
			background-image url('../img/sprites/sprite1.png')
			background-position -120px 0px 
			background-repeat no-repeat
			
		&--hat
			background-image url('../img/sprites/sprite1.png')
			background-position -240px 0px 
			background-repeat no-repeat
			
		&--hand
			background-image url('../img/sprites/sprite1.png')
			background-position -360px 0px 
			background-repeat no-repeat
			
		&--photo
			width 170px
			height 170px
			
	
	&--receive
		border-color $pink
		width 150px
		height 150px
		
	&--slider
		border-color $blue
		width 200px
		height 200px
		margin-top 0

.recieve-container
	background url('../img/iphone.png') no-repeat
	background-position center
	background-size 60%
	
	@media all and (max-width: 992px)
		background none
		
.receive
	&__heading
		font-size 20px
		
	&__description
		font-size 16px
		
.footer
	background-color $black
	color #fff
	text-transform uppercase
	padding 20px
	font-size 14px